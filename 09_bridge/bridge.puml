    RawOpen()
    end note
    note left of Display::Print
    RawPrint()
    end note
    note left of Display::Close
    RawClose()
    end note
    note left of Display::DisplaySth
    Open()
    Print()
    Close()
    end note
    interface DisplayImpl {
        {abstract}RawOpen()
        {abstract}RawPrint()
        {abstract}RawClose()
    }
}
abstract class CountDisplay {
    Display
    MultiDisplaySth()
}
note left of CountDisplay::MultiDisplay
    Open()
    n * Print()
    Close()
end note
